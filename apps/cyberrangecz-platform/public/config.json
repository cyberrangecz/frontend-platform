{
    "enableLocalMode": true,
    "defaultPageSize": 15,
    "polling": {
        "pollingPeriodShort": 3000,
        "pollingPeriodLong": 5000,
        "retryCount": 3
    },
    "basePaths": {
        "linearTraining": "https://devel.platform.cyberrange.cz/training/api/v1",
        "adaptiveTraining": "https://devel.platform.cyberrange.cz/adaptive-training/api/v1",
        "sandbox": "https://devel.platform.cyberrange.cz/sandbox-service/api/v1",
        "userAndGroup": "https://devel.platform.cyberrange.cz/user-and-group/api/v1",
        "mitre": "https://devel.platform.cyberrange.cz/mitre-technique-service/api/v1",
        "guacamole": "https://devel.platform.cyberrange.cz/guacamole/api/v1"
    },
    "roleMapping": {
        "uagAdmin": "ROLE_USER_AND_GROUP_ADMINISTRATOR",
        "trainingDesigner": "ROLE_TRAINING_DESIGNER",
        "trainingOrganizer": "ROLE_TRAINING_ORGANIZER",
        "adaptiveTrainingDesigner": "ROLE_ADAPTIVE_TRAINING_DESIGNER",
        "adaptiveTrainingOrganizer": "ROLE_ADAPTIVE_TRAINING_ORGANIZER",
        "trainingTrainee": "ROLE_TRAINING_TRAINEE",
        "sandboxDesigner": "ROLE_SANDBOX-SERVICE_DESIGNER",
        "sandboxOrganizer": "ROLE_SANDBOX-SERVICE_ORGANIZER"
    },
    "authConfig": {
        "guardMainPageRedirect": "home",
        "guardLoginPageRedirect": "login",
        "interceptorAllowedUrls": [
            "https://172.19.0.22",
            "https://172.19.0.22/user-and-group/api/v1",
            "https://devel.platform.cyberrange.cz",
            "https://devel.platform.cyberrange.cz/user-and-group/api/v1"
        ],
        "authorizationStrategyConfig": {
            "authorizationUrl": "https://devel.platform.cyberrange.cz/user-and-group/api/v1/users/info"
        },
        "navigateToRequestedRoutePostLogin": true,
        "providers": [
            {
                "label": "Login with local Keycloack",
                "textColor": "white",
                "backgroundColor": "#002776",
                "oidcConfig": {
                    "requireHttps": true,
                    "issuer": "https://devel.platform.cyberrange.cz/keycloak/realms/CRCZP",
                    "clientId": "CRCZP-Client",
                    "redirectUri": "https://localhost:4200",
                    "scope": "openid email profile offline_access",
                    "logoutUrl": "https://devel.platform.cyberrange.cz/keycloak/realms//CRCZP/protocol/openid-connect/logout",
                    "postLogoutRedirectUri": "https://devel.platform.cyberrange.cz/logout-confirmed",
                    "silentRefreshRedirectUri": "https://devel.platform.cyberrange.cz/silent-refresh.html",
                    "clearHashAfterLogin": true,
                    "strictDiscoveryDocumentValidation": false,
                    "skipIssuerCheck": true,
                    "responseType": "code",
                    "oidc": true
                }
            }
        ]
    }
}
